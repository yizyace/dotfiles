{
  "terminal.integrated.fontFamily": "Menlo for Powerline",
  "workbench.editor.enablePreview": false,
  "vim.useSystemClipboard": true,
  "vim.incsearch": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // The number of spaces a tab is equal to. This setting is overridden
  // based on the file contents when `editor.detectIndentation` is true.
  "editor.tabSize": 2,
  "editor.formatOnSave": false,
  // Insert spaces when pressing Tab. This setting is overriden
  // based on the file contents when `editor.detectIndentation` is true.
  "editor.insertSpaces": true,
  // When opening a file, `editor.tabSize` and `editor.insertSpaces`
  // will be detected based on the file contents. Set to false to keep
  // the values you've explicitly set, above.
  "editor.detectIndentation": false,
  "editor.rulers": [
    120
  ],
  "window.title": "${activeEditorLong}${separator}${rootName}",
  "editor.columnSelection": false,
  "ruby.specCommand": "bin/rspec",
  "workbench.enableExperiments": false,
  "workbench.editor.focusRecentEditorAfterClose": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "explorer.autoReveal": false,
  "problems.autoReveal": false,
  "scm.autoReveal": false,
  "[handlebars]": {
    "editor.defaultFormatter": "mfeckies.handlebars-formatter"
  },
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "emmet.extensionsPath": [
    ""
  ],
  "emmet.includeLanguages": {
    "erb": "html",
    "ruby": "html"
  },
  "editor.renderWhitespace": "all",
  "scssLint.runOnTextChange": true,
  // "ruby.rubocop.onSave": true,
  // "editor.formatOnSave": true,
  "files.associations": {
    "*.erb": "erb"
  },
  "files.exclude": {
    "**/.git": true,         // this is a default value
    "**/.DS_Store": true,    // this is a default value
    "**/.history": true,
    "**/log": true
  },
  "ruby.specFocusTerminal": false,
  "ruby.specClearTerminal": false,
  "extensions.ignoreRecommendations": true,

  // fix slow ass terminal
  // https://github.com/microsoft/vscode/issues/108590
  "terminal.integrated.allowChords": false,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.experimentalLinkProvider": false,
  "terminal.integrated.rendererType": "auto",
  "editor.minimap.enabled": false,
  "editor.largeFileOptimizations": false,
  "[json]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "cSpell.userWords": [
    "during",
    "query",
    "received"
  ],
  "terminal.integrated.tabs.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.inlineSuggest.enabled": true,
  "search.exclude": {
    ".git": true,
    "node_modules": true,
    "bower_components": true,
    "tmp": true,
    "dist/assets": true,
    ".history": true
  },
}
